import express from "express";
import path from "path";
import { fileURLToPath } from "url";

import execute from "./executor/index.js";

const __filename = fileURLToPath(import.meta.url);
const __dirname = path.dirname(__filename);

const app = express();
const PORT = 3001;
const BUILD_ROOT = path.join(__dirname, "builds");

app.use(express.json());
app.use("/builds", express.static(BUILD_ROOT));

app.post("/generate-site", async (req, res) => {
  try {
    const { prompt } = req.body;

    await execute({
      mode: "full",
      prompt,
      buildRoot: BUILD_ROOT
    });

    res.json({ message: "Site generated" });
  } catch (err) {
    res.status(500).json({ error: err.message });
  }
});

app.post("/regenerate-page", async (req, res) => {
  try {
    const { slug } = req.body;

    const result = await execute({
      mode: "page",
      target: { slug },
      buildRoot: BUILD_ROOT
    });

    res.json(result);
  } catch (err) {
    res.status(500).json({ error: err.message });
  }
});

app.listen(PORT, () => {
  console.log(`v0.10 running at http://localhost:${PORT}`);
});
