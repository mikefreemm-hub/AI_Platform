{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ExecutionGraph",
  "type": "object",
  "required": ["run_id", "timestamp", "steps", "final_output"],
  "properties": {
    "run_id": {
      "type": "string",
      "description": "Unique identifier for this execution run"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of execution start"
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "type", "input", "output"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Step identifier (unique within run)"
          },
          "type": {
            "type": "string",
            "enum": ["transform", "model", "decision"],
            "description": "Step category"
          },
          "input": {
            "description": "Input provided to this step",
            "type": ["string", "object", "array", "null"]
          },
          "output": {
            "description": "Output produced by this step",
            "type": ["string", "object", "array", "null"]
          },
          "metadata": {
            "type": "object",
            "description": "Optional step metadata (tokens, model, etc.)",
            "additionalProperties": true
          }
        },
        "additionalProperties": false
      }
    },
    "final_output": {
      "description": "Final response returned to the user",
      "type": ["string", "object"]
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Optional confidence score"
    }
  },
  "additionalProperties": false
}
